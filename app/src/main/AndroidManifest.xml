<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.judacribz.week3weekend_threads">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".list.EmployeeListActivity"
            android:label="@string/title_activity_employee_list"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".list.EmployeeDetailsActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".nav.UpdateEmployeeActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".nav.DeleteEmployeeActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".nav.NewEmployeeActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".nav.FilterEmployeeActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>